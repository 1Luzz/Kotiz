# =============================================================================
# Docker Compose Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# Database
DB_USER=caisse_noire
DB_PASSWORD=your_secure_database_password_here
DB_NAME=caisse_noire

# JWT Secrets (minimum 32 characters each - generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=your_access_token_secret_minimum_32_characters
JWT_REFRESH_SECRET=your_refresh_token_secret_minimum_32_characters

# API Configuration
API_PORT=3000
API_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8081,exp://192.168.1.100:8081

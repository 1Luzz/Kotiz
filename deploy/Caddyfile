# =============================================================================
# Kotiz - Caddy Configuration for luzz.me Homeserver
# =============================================================================
# Add this configuration to your existing Caddyfile on the homeserver
# =============================================================================

kotiz.luzz.me {
    # Reverse proxy to Kotiz container
    reverse_proxy localhost:3001

    # Enable compression
    encode gzip zstd

    # Security headers
    header {
        # HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevent MIME sniffing
        X-Content-Type-Options "nosniff"
        # XSS Protection
        X-XSS-Protection "1; mode=block"
        # Referrer Policy
        Referrer-Policy "strict-origin-when-cross-origin"
        # CSP for PWA
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https:; font-src 'self' data:; connect-src 'self' https://kotiz.luzz.me wss://kotiz.luzz.me; manifest-src 'self'; worker-src 'self';"
        # Remove server header
        -Server
    }

    # Cache static assets
    @static {
        path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # Don't cache HTML and API responses
    @dynamic {
        path /
        path /auth/*
        path /users/*
        path /teams/*
        path /disputes/*
        path /notifications/*
    }
    header @dynamic Cache-Control "no-cache, no-store, must-revalidate"

    # Logging
    log {
        output file /var/log/caddy/kotiz.log {
            roll_size 10mb
            roll_keep 5
        }
    }
}
